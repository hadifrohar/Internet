<%- include('shared/head.ejs') %>

<script src="javascripts/github_search.js"></script>
</head>
<body>

<nav class="navbar navbar-light bg-light justify-content-between">
  <form class="form-inline ml-auto" action="/logout" method="post">
    <button class="btn btn-outline-danger ml-auto" id="logout-button">Logout</button>
  </form>
</nav>

<div class="container-fluid">
  <div class="row">
    <div class="col-12">

      <h1 class="font-weight-bolder text-center">GitHub Search</h1>
      <h6>Username:</h6>
      <input type="text" class="form-control" placeholder="Enter a GitHub username" id="user_input">

      <div class="mt-2">
        <button type="button" class="btn btn-warning" id="search-button">Search</button>
        <button type="button" class="btn btn-success" id="save-button">Save</button>
        <button type="button" class="btn btn-danger" id="delete-button">Delete</button>
      </div>

      <div class="alert alert-danger mt-3 d-none font-weight-bold" role="alert" id="alert_box"></div>
    </div>


  </div>

  <div class="row mt-3">

    <div class="col-sm-6 d-none" id="demo-box">
      <div class="card shadow">
        <div class="card-body">
          <div id="user-details"></div>
        </div>
      </div>
    </div>




    <div class="col-sm-6">
      <div class="card shadow">
        <div class="card-body" id="saved-box">
        </div>
      </div>
    </div>
  </div>

</div>



